lass time:
       def __init__(obj,h,m,s):
               obj.hour = h
               obj.minute = m
               obj.second = s
       def show(obj,ruz):
               obj.date = ruz
               return str(obj.hour)+':'+str(obj.minute)+':'+str(obj.second)
       def show1(obj,total):
	       obj.sumsanie = total
	       return (obj.hour*3600 + obj.minute*60 + obj.second)

t1=time(3,10,57)
t1.show(2)
'3:10:57'
>>> t1.show1(5)
11457
